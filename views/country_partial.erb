<a class="list__item country
    <% if complete?(country) %>
        <% if played_by_user?(country) %>
            country--completed-by-user
        <% else %>
            country--completed
        <% end %>
    <% end %>" href="<%= url "/countries/#{country.slug}" %>">

    <h3 class="country__name"><%= country.name %></h3>

    <% if complete?(country) %>
        <% if played_by_user?(country) %>
            <em class="country__status">Completed!</em>
        <% else %>
            <em class="country__status">No politicians left to play</em>
        <% end %>
    <% else %>
        <em class="country__status"><%= remaining_people(country) %> politicians <% if played_by_user?(country) %>left <% end %>to play</em>
    <% end %>

    <div class="country__progress">
        <% if any_gender_data_for?(country) %>
            <p class="country__progress__intro">Known gender balance for <%= country.name %>:</p>
            <div class="progress-bar progress-bar--gendered progress-bar--labelled">
                <div class="progress-bar__males" style="width: <%= country_gender_percentage(country, :male) %>%">
                    <span class="progress-bar__label"><%= country_counts[country.slug][:male] %> men</span>
                </div>
                <div class="progress-bar__females" style="width: <%= country_gender_percentage(country, :female) %>%">
                    <span class="progress-bar__label"><%= country_counts[country.slug][:female] %> women</span>
                </div>
            </div>
        <% else %>
            <p class="country__progress__intro">We donâ€™t know any gender data for <%= country.name %> yet!</p>
            <div class="progress-bar progress-bar--gendered"></div>
        <% end %>
    </div>
</a>

