<% content_for :back_button do %>
    <a class="app-header__back" href="/countries"><i class="fa fa-chevron-left"></i></a>
<% end %>

<h2 class="page-title"><%= @country[:country] %></h2>

<% @country[:legislatures].each do |legislature| %>
    <h3><%= legislature[:name] %></h3>

    <div class="list list--terms">
        <% legislature[:legislative_periods].each do |legislative_period| %>
            <% if @previous_term_complete %>
                <a class="list__item" href="<%= url "/countries/#{params[:country]}/legislatures/#{URI.escape(legislature[:slug])}/periods/#{legislative_period[:slug]}/person" %>">
                    <h3><%= legislative_period[:name] %></h3>
                    <p class="term__date"><%= legislative_period[:start_date] %>–<%= legislative_period[:end_date] || 'current' %></p>
                    <div class="progress-bar progress-bar--<%= progress_word(percent_complete_term(@country, legislature, legislative_period)) %>"><div style="width: <%= percent_complete_term(@country, legislature, legislative_period) %>%"></div></div>
                </a>
                <% @previous_term_complete = (percent_complete_term(@country, legislature, legislative_period) == 100) %>
                <% if @first_term && !@previous_term_complete %>
                    <p class="terms__encouragement">
                    Complete your first term to unlock terms further in the past
                    </p>
                <% end %>
                <% @first_term = false %>
            <% else %>
                <div class="list__item list__item--disabled">
                    <h3><%= legislative_period[:name] %></h3>
                    <p class="term__date"><%= legislative_period[:start_date] %>–<%= legislative_period[:end_date] || 'current' %></p>
                    <div class="progress-bar progress-bar--<%= progress_word(percent_complete_term(@country, legislature, legislative_period)) %>"><div style="width: <%= percent_complete_term(@country, legislature, legislative_period) %>%"></div></div>
                </div>
            <% end %>
        <% end %>
    </div>

<% end %>
